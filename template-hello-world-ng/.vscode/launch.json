    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "iOS110",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "args": [
                "${workspaceRoot}/e2e",
                "-u",
                "tdd",
                "--timeout",
                "999999",
                "--colors",
                "--runType",
                "sim.iPhoneX.iOS110",
                "--reuseDevice"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "android23",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
